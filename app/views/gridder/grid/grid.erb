/* `Container
------------------------------------------------------------------------------*/

.<%= @grid.container %> {
  margin: 0 auto;
  width: <%= @grid.width %>px;
  padding: 0 <%= (@grid.gutter * 0.5).to_i %>px;
}

/* `Global
------------------------------------------------------------------------------*/

<% 1.upto(@grid.num_cols - 1) do |c| %>
.<%= @grid.col c %>,
<% end %>
.<%= @grid.col @grid.num_cols %> {
  padding: <%= (@grid.gutter * 0.5).to_i %>px;
  display: inline;
  float: left;
}

<% 1.upto(@grid.num_cols - 2) do |c| %>
.<%= @grid.push c %>,
.<%= @grid.pull c %>,
<% end %>
.<%= @grid.push @grid.num_cols - 1 %>,
.<%= @grid.pull @grid.num_cols - 1 %> {
  position: relative;
}

/* `Columns
------------------------------------------------------------------------------*/

<% 1.upto(@grid.num_cols) do |c| %>
.<%= @grid.col c %> {
  width: <%= (c - 1) * (@grid.col_width +  @grid.gutter) + @grid.col_width %>px;
}
<% end %>

/* `Prefix
------------------------------------------------------------------------------*/

<% 1.upto(@grid.num_cols - 1) do |c| %>
.<%= @grid.prefix c %> {
  padding-left: <%= c * (@grid.col_width +  @grid.gutter) %>px;
}
<% end %>

/* `Suffix
------------------------------------------------------------------------------*/

<% 1.upto(@grid.num_cols - 1) do |c| %>
.<%= @grid.suffix c %> {
  padding-right: <%= c * (@grid.col_width +  @grid.gutter) %>px;
}
<% end %>

/* `Push
------------------------------------------------------------------------------*/

<% 1.upto(@grid.num_cols - 1) do |c| %>
.<%= @grid.push c %> {
  left: <%= c * (@grid.col_width +  @grid.gutter) %>px;
}
<% end %>

/* `Pull
------------------------------------------------------------------------------*/

<% 1.upto(@grid.num_cols - 1) do |c| %>
.<%= @grid.pull c %> {
  left: -<%= c * (@grid.col_width +  @grid.gutter) %>px;
}
<% end %>

/* `Utils
------------------------------------------------------------------------------*/

.<%= @grid.alpha %> {
  margin-left: 0;
}

.<%= @grid.omega %> {
  margin-right: 0;
}

.<%= @grid.clear %> {
  clear: both;
  display: block;
  overflow: hidden;
  visibility: hidden;
  width: 0;
  height: 0;
}
